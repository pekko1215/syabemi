generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ActiveGuild {
  id        Int      @id @default(autoincrement())
  guildId   String   @unique
  role      Int
  updatedAt DateTime
  createdAt DateTime @default(now())
}

model EnteringRoom {
  id        Int      @id @default(autoincrement())
  updatedAt DateTime
  createdAt DateTime @default(now())
  guildId   String   @unique
  channelId String   @unique
  hostId    String
}

model DictionaryIndex {
  id        Int      @id @default(autoincrement())
  updatedAt DateTime
  createdAt DateTime @default(now())
  guildId   String
  before    String
  after     String
}

model ReadUpQueue {
  id       Int    @id @default(autoincrement())
  text     String
  priority Int
  guildId  String
}
